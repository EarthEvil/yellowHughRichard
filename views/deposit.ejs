<html lang="en">

<head>
    <% include partials/head %>
        <script src="js/deposit.js"></script>
</head>

<body ng-app="deposit" ng-controller="depositController" class="mainContent">
    <div class="row">
        <div class="col s2">
            <h4>Welcome, </h4>
        </div>
        <div class="col s6">
            <h4 id="usernameHeader"><%= user.id%></h4>
        </div>
        <div class="right">
            <a class="btn waves-effect waves-light blue lighten-1" href="logout">Log out</a>
        </div>
        <br>
    </div>
    <div>
        <nav>
            <div class="nav-wrapper blue lighten-1 ">
                <a href="#" class="brand-logo right">Elastic</a>
                <ul id="nav-mobile" class="left hide-on-med-and-down">
                    <li><a href="index">Home</a></li>
                    <li><a href="debit">Debit</a></li>
                    <li class="active"><a href="deposit">Deposit</a></li>
                    <li><a href="accountManagement">Manage Account</a></li>
                </ul>
            </div>
        </nav>
    </div>
    <br>
    <div>
        <div ng-app="deposit" ng-controller="depositController">
            <form ng-submit="deposit(selectedAccount, amount)">
                <div class="row">
                    <div class=" input-field col s6">
                        Account Number
                        <select name="resourceTemp" ng-model="selectedAccount">
                            <option ng-repeat="account in accounts" value="{{account.account_number}}">{{account.account_number}}</option>
                        </select>
                    </div>
                </div>
                <div class="row">
                    <div class="input-field col s6">
                        <input placeholder="amount you want to deposit" name="amount" ng-model="amount" type="number" min="1" class="validate" required="" aria-required="true" maxlength="20">
                        <label for="amount">Amount</label>
                    </div>
                </div>
                <!-- {{selectedAccount}} -->
                <button class="btn waves-effect waves-light" type="submit">deposit</button>
            </form>
        </div>
    </div>
    <footer>
        <% include partials/footer %>
    </footer>
</body>

</html>
