<html lang="en">

<head>
    <% include partials/head %>
    <style>
    .toRight {
        float: right;
    }
    .center {
        position: relative;
        width: 100%;
    }
    </style>
    <script src='https://www.google.com/recaptcha/api.js'></script>
    <script src="/js/login.js"></script>
</head>

<body ng-app="login" ng-controller="loginController" class="mainContent">
    <div class="row">
        <div class="col s12">
            <div class="card white darken-1 ">
                <div class="card-content black-text">
                    <div class="row">
                        <!-- <form class="col s6" ng-submit="login(username, password)"> -->
                        <form class="col s6" method = "post", action = "/login">
                            <div class="row">
                                <span class="card-title">Log In</span>
                            </div>
                            <div class="row">
                                <div class="input-field col s12">
                                    <input id="username" ng-model="username" type="text" class="validate" autocomplete="off" required="" aria-required="true">
                                    <label for="username">username</label>
                                </div>
                            </div>
                            <div class="row">
                                <div class="input-field col s12">
                                    <input id="password" ng-model="password" type="password" class="validate" required="" aria-required="true">
                                    <label for="password">Password</label>
                                </div>
                            </div>
                            <!-- <div class="row">
                                <div class="g-recaptcha" data-sitekey="6LcgKAoUAAAAADv7uJlipSWqPXswGpQekLcwZeWC"></div>
                            </div> -->
                            <div class="row">
                                <div class="col s4">
                                    <button class="btn waves-effect waves-light" type="submit">Log in</button>
                                </div>
                                <div class="col s6">
                                    <div class="switch">
                                        <P>Remember me</P>
                                        <label>
                                            No
                                            <input type="checkbox">
                                            <span class="lever"></span> Yes
                                        </label>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <br>
                                <div class="col s6">
                                    <p>Do not have an account? </p> <a class="btn waves-effect waves-light blue" href="signup.html">Sign up</a>
                                </div>
                                <div class="col s6">
                                    <p>Go back to home</p> <a class="btn waves-effect waves-light blue" href="index.html">Home</a>
                                </div>
                            </div>
                        </form>
                        <div class="col s6">
                            <img class="center" src="/images/logo.png" alt="Mountain View">
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
      <footer>
        <% include partials/footer %>
    </footer>
</body>

</html>
