<html lang="en">

<head>
    <% include partials/head %>
        <script src="js/debit.js"></script>
        <title>Debit</title>
</head>
<!-- <body ng-app="debit" ng-controller="debitController" class="mainContent"> -->

<body ng-app="debit" ng-controller="debitController" class="mainContent">
    <div>
        <div>
            <% include partials/top %>
        </div>
        <nav>
            <div class="nav-wrapper blue lighten-1 ">
                <a href="#" class="brand-logo right">Elastic</a>
                <ul id="nav-mobile" class="left hide-on-med-and-down">
                    <li><a href="index">Home</a></li>
                    <li class="active"><a href="debit">Debit</a></li>
                    <li><a href="deposit">Deposit</a></li>
                    <li><a href="accountManagement">Manage Account</a></li>
                </ul>
            </div>
        </nav>
    </div>
    <br>
    <div>
        <div ng-app="debit" ng-controller="debitController">
            <form id = "debitForm" ng-submit="debit(selectedAccount, amount)" ng-show="accounts[0] !== undefined">
                <div class="row">
                    <div class=" input-field col s6">
                        Account Number
                        <select name="resourceTemp" ng-model="selectedAccount">
                            <option ng-repeat="account in accounts" value="{{account.account_number}}">{{account.account_number}}</option>
                        </select>
                    </div>
                </div>
                <div class="row">
                    <div class="input-field col s6">
                        <input id="amount" placeholder="amount you want to debit" ng-model="amount" type="number" min="1" class="validate" required="" aria-required="true" maxlength="20">
                        <label for="amount">Amount</label>
                    </div>
                </div>
                <!-- {{selectedAccount}} -->
                <button class="btn waves-effect waves-light" type="submit">debit</button>
            </form>
            <div>
                <div ng-show="serverResponse !== undefined">
                    <div class="card white">
                        <div class="card-content blue-text flow-text">
                            {{serverResponse}}
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <footer>
            <% include partials/footer %>
        </footer>
</body>

</html>
