<html lang="en">

<head>
    <% include partials/head %>
        <script src="js/debit.js"></script>
</head>
<!-- <body ng-app="debit" ng-controller="debitController" class="mainContent"> -->

<body ng-app="debit" ng-controller="debitController" class="mainContent">
    <div>
        <div>
            <div class="row">
                <div class="col s2">
                    <h4>Welcome, </h4>
                </div>
                <div class="col s6">
                    <h4 id="usernameHeader"><%= user.id%></h4>
                </div>
                <div class="right">
                    <a class="btn waves-effect waves-light blue lighten-1" href="logout">Log out</a>
                </div>
                <br>
            </div>
        </div>
        <nav>
            <div class="nav-wrapper blue lighten-1 ">
                <a href="#" class="brand-logo right">Elastic</a>
                <ul id="nav-mobile" class="left hide-on-med-and-down">
                    <li><a href="index">Home</a></li>
                    <li class="active"><a href="debit">Debit</a></li>
                    <li><a href="deposit">Deposit</a></li>
                    <li><a href="accountManagement">Manage Account</a></li>
                </ul>
            </div>
        </nav>
    </div>
    <br>
    <div>
        <form ng-submit="deposit(account_number, amount)">
            <div ng-app="debit" ng-controller="debitController">
                <select name="resourceTemp" ng-model="selectedAccount">
                    <option ng-repeat="account in accounts" value="{{account.account_number}}">{{account.account_number}}</option>
                </select>
                {{selectedAccount}}
            </div>
            <button class="btn waves-effect waves-light" type="submit">deposit</button>
        </form>
        <div>
            <div id="alert" ng-show="postError" class="row">
                <div class="card-panel">
                    <span class="red-text text-darken-2">DEBIT FAILED</span>
                </div>
            </div>
            <div id="alert" ng-show="successPost" class="row">
                <div class="card-panel">
                    <span class="blue-text">{{amount|currency}} IS NOW DEBIT FROM YOUR ACCOUNT: {{accountID}}</span>
                </div>
            </div>
        </div>
        <footer>
            <% include partials/footer %>
        </footer>
</body>

</html>
