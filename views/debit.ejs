<html lang="en">

<head>
    <% include partials/head %>
        <script src="js/debit.js"></script>
        <title>Debit</title>
        <% include partials/shared_js %>
</head>
<!-- <body ng-app="debit" ng-controller="debitController" class="mainContent"> -->

<body ng-app="debit" ng-controller="debitController" class="mainContent">
    <div>
        <% include partials/side_menu %>
    </div>
    <br>
    <div class="content">
        <div ng-show="!accounts[0]">
            You don't have any acount yet. Go to Manage Account to create a new account.
        </div>
        <div ng-show="accounts[0]">
            <form id="debitForm" ng-submit="debit(selectedAccount, amount)" ng-show="accounts[0]">
                <div class="row">
                    <div class=" input-field col s6">
                        Account Number
                        <select name="resourceTemp" ng-model="selectedAccount">
                            <option ng-repeat="account in accounts" value="{{account.account_number}}">{{account.account_number}}</option>
                        </select>
                    </div>
                </div>
                <div class="row">
                    <div class="input-field col s6">
                        <input id="amount" placeholder="amount you want to debit" ng-model="amount" type="number" min="1" class="validate" required="" aria-required="true" maxlength="20">
                        <label for="amount">Amount</label>
                    </div>
                    <div class="input-field col s6">
                        <button id = 'submit' class="btn waves-effect waves-light" type="submit">debit</button>
                    </div>
                </div>
                <!-- {{selectedAccount}} -->
            </form>
            <div>
                <div ng-show="serverResponse !== undefined">
                    <div class="card white">
                        <div class="card-content blue-text flow-text">
                            {{serverResponse}}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <footer>
        <% include partials/footer %>
    </footer>
</body>

</html>
