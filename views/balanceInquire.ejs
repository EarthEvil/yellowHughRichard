<html lang="en">

<head>
    <% include partials/head %>
        <script src="../js/balance_inquire.js"></script>
        <title>Balance Inquire</title>
        <% include partials/shared_js %>
</head>

<body ng-app="balanceInquire" ng-controller="balanceInquireController" class="mainContent">
    <div>
        <% include partials/side_menu %>
    </div>
    <br>
    <div>
        <form ng-submit="getBalance(accountID)">
            <div class="row">
                <div class="input-field col s6">
                    <input placeholder="type your account id" id="account_id" ng-model="accountID" type="text" class="validate" required="" aria-required="true" maxlength="20">
                    <label for="account_id">Account ID</label>
                    <button class="btn waves-effect waves-light" type="submit"> check my balance
                    </button>
                </div>
            </div>
        </form>
    </div>
    <!-- <div class="row"> -->
    <div id="alert" ng-show="isEmptyResultSet" class="row">
        <div class="card-panel">
            <span class="red-text text-darken-2">NOT RESULT FOUND WITH ACCOUNT ID: {{accountID}} </span>
        </div>
    </div>
    </div>
    <!-- <div> -->
    <div class="row">
        <div class="col s12 m6">
            <div class="card blue lighten-1 darken-1">
                <div class="card-content white-text">
                    <span class="card-title">Account Detail</span>
                    <p>Account ID: {{accountDetail.account_id}}</p>
                    <p>Customer ID: {{accountDetail.customer_id}}</p>
                    <p>Balance: {{accountDetail.balance}}</p>
                </div>
            </div>
        </div>
    </div>
    </div>
    <footer>
        <% include partials/footer %>
    </footer>
</body>

</html>
